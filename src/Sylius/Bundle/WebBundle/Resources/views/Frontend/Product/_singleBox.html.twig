{% if not(is_mobile()) %}
<div class="article col-md-3">
    <img src="{{ product.image ? product.image.path|imagine_filter('sylius_250x250') : 'http://placehold.it/250x250' }}" alt="{{ product.name }}" />
    <p>{{ product.name|truncate(18) }}</p>
    <p style="font-size: 12px;">{{ product.getManufacturer }}</p>
    <p><span>{{ product.price|sylius_price }}</span></p>
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}"><p><button class="addToCart">ADD TO CART</button></p></a>
</div>
{% else %}
<div class="articleMobile col-xs-6"">
    <img class="img-responsive" src="{{ product.image ? product.image.path|imagine_filter('sylius_250x250') : 'http://placehold.it/250x250' }}" alt="{{ product.name }}" />
    <p>{{ product.name|truncate(18) }}</p>
    <p style="font-size: 12px;">{{ product.getManufacturer }}</p>
    <p><span>{{ product.price|sylius_price }}</span></p>
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}"><p><button class="addToCart">ADD TO CART</button></p></a>
</div>
{% endif %}
