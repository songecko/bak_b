<div class="article" style="margin-left: 33.6px">
    <img src="{{ product.image ? product.image.path|imagine_filter('sylius_295x250') : 'http://placehold.it/262x255' }}" alt="{{ product.name }}" />
    <p>{{ product.name|truncate(18) }}</p>
    <p><span>{{ product.price|sylius_price }}</span></p>
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}"><p><button class="addToCart">ADD TO CART</button></p></a>
</div>
