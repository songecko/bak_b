{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
	<div class="static1 container-fluid">
		<div class="top row">
		{% if not(is_mobile()) %}
			<div class="left col-md-2">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/lulu_lifestyle.png') }}">
			</div>
			<div class="middle col-md-8">
				<div id="carouselBanner" class="carousel slide" data-ride="carousel">
	  				<!-- Indicators -->
				  	<ol class="carousel-indicators">
				    	<li data-target="#carouselBanner" data-slide-to="0" class="active"></li>
				    	<li data-target="#carouselBanner" data-slide-to="1"></li>
				    	<li data-target="#carouselBanner" data-slide-to="2"></li>
				  	</ol>
  					<!-- Wrapper for slides -->
  					<div class="carousel-inner">
    					<div class="item active">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/angiedenisselifestyle.png') }}">
    					</div>
    					<div class="item">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/suxess.png') }}">
    					</div>
    					<div class="item">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/coa.png') }}">
    					</div>
  					</div>
  					<!-- Controls -->
  					<a class="left carousel-control" href="#carouselBanner" data-slide="prev">
    					<span class="glyphicon glyphicon-chevron-left"></span>
  					</a>
  					<a class="right carousel-control" href="#carouselBanner" data-slide="next">
    					<span class="glyphicon glyphicon-chevron-right"></span>
  					</a>
				</div>
			</div>
			<div class="right col-md-2">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/artonico.png') }}">
			</div>
		{% else %}
			<div class="col-xs-12">
				<div id="carouselBanner" class="carousel mobile slide" data-ride="carousel">
	  				<!-- Indicators -->
				  	<ol class="carousel-indicators">
				    	<li data-target="#carouselBanner" data-slide-to="0" class="active"></li>
				    	<li data-target="#carouselBanner" data-slide-to="1"></li>
				    	<li data-target="#carouselBanner" data-slide-to="2"></li>
				  	</ol>
  					<!-- Wrapper for slides -->
  					<div class="carousel-inner">
    					<div class="item active">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/angiedenisselifestyle.png') }}">
    					</div>
    					<div class="item">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/suxess.png') }}">
    					</div>
    					<div class="item">
      						<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/coa.png') }}">
    					</div>
  					</div>
  					<!-- Controls -->
  					<a class="left carousel-control" href="#carouselBanner" data-slide="prev">
    					<span class="glyphicon glyphicon-chevron-left"></span>
  					</a>
  					<a class="right carousel-control" href="#carouselBanner" data-slide="next">
    					<span class="glyphicon glyphicon-chevron-right"></span>
  					</a>
				</div>
			</div>
		{% endif %}
		</div>
		<div class="bottom row">
		{% if not(is_mobile()) %}
			<div class="left col-md-4">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/peelheel_3.png') }}">
			</div>
			<div class="middle col-md-4">
				<div class="top">
					<img class="img-responsive static1BottomImg" src="{{ asset('bundles/tresepicbopr/images/lollipopcases2.png') }}">
				</div>
				<div class="bottom">
					<img class="img-responsive static1BottomImg" src="{{ asset('bundles/tresepicbopr/images/origami_lifestyle2.png') }}">
