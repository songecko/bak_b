</div>-->
	<div class="featuredProducts">
		<img class="separator img-responsive" src="{{ asset('bundles/tresepicbopr/images/featured-products.png') }}" />
	</div>
	<div class="products clearfix row">
		{% if not(is_mobile()) %}
			{{ render(url('sylius_partial_product_latest', {'limit': 4, 'template': 'SyliusWebBundle:Frontend/Product:latest.html.twig'})) }}
		{% else %}
			{{ render(url('sylius_partial_product_latest', {'limit': 2, 'template': 'SyliusWebBundle:Frontend/Product:latest.html.twig'})) }}
		{% endif %}
		<img class="separator img-responsive container" style="margin-bottom: 25px;" src="{{ asset('bundles/tresepicbopr/images/separator.png') }}" />
	</div>
	<div class="static2 container-fluid">
		{% if not(is_mobile()) %}
		<div class="row">
			<div class="left col-md-6">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/COAlifestyle.png') }}">
			</div>
			<div class="right col-md-6">
				<div class="row">
					<div class="left col-md-4">
						<img class="img-responsive static2Img" src="{{ asset('bundles/tresepicbopr/images/artonico3.png') }}">
					</div>
					<div class="middle col-md-4">
						<img class="img-responsive static2Img" src="{{ asset('bundles/tresepicbopr/images/HEELCONDOMS2.png') }}">
					</div>
					<div class="right col-md-4">
						<img class="img-responsive static2Img" src="{{ asset('bundles/tresepicbopr/images/dehojaslifestyle.png') }}">
					</div>
				</div>
			</div>
		</div>
		{% else %}
		<div class="row">
			<div class="col-xs-8 static2ColR">
				<img class="img-responsive static2ImgTop" src="{{ asset('bundles/tresepicbopr/images/COAlifestyle.png') }}">
			</div>
			<div class="col-xs-4">
				<img class="img-responsive static2Img" src="{{ asset('bundles/tresepicbopr/images/artonico3.png') }}">
			</div>
		</div>
		<div class="row" style="margin-top: 20px;">
			<div class="col-xs-4">
				<img class="img-responsive static2Img" src="{{ asset('bundles/tresepicbopr/images/artonico3.png') }}">
			</div>
			<div class="col-xs-8 static2ColL">
				<img class="img-responsive static2ImgTop" src="{{ asset('bundles/tresepicbopr/images/COAlifestyle.png') }}">
