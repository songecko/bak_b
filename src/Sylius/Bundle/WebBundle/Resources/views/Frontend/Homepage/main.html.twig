{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
	<div class="static1 container-fluid">
		<div class="top row">
		{% if not(is_mobile()) %}
			<div class="left col-md-2">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/lululifestyle.png') }}">
			</div>
			<div class="middle col-md-8">
				<img class="img-responsive static1TopImg" src="{{ asset('bundles/tresepicbopr/images/angiedenisselifestyle.png') }}">
			</div>
			<div class="right col-md-2">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/artonico.png') }}">
			</div>
		{% else %}
			<div class="col-xs-12">
				<img class="img-responsive static1Img" src="{{ asset('bundles/tresepicbopr/images/angiedenisselifestyle.png') }}">
			</div>
		{% endif %}
		</div>
		<div class="bottom row">
		{% if not(is_mobile()) %}
			<div class="left col-md-4">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/COA_LIFESTYLE.png') }}">
			</div>
			<div class="middle col-md-4">
				<div class="top">
					<img class="img-responsive static1BottomImg" src="{{ asset('bundles/tresepicbopr/images/sugarlablifestyle.png') }}">
				</div>
				<div class="bottom">
					<img class="img-responsive static1BottomImg" src="{{ asset('bundles/tresepicbopr/images/ORIGAMI.png') }}">
				</div>
			</div>
			<div class="right col-md-4">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/HEELCONDOMS1.png') }}">
			</div>
		{% else %}
			<div class="col-xs-6">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/sugarlablifestyle.png') }}">
			</div>
			<div class="col-xs-6">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/ORIGAMI.png') }}">
			</div>
		{% endif %}
		</div>
	</div>
