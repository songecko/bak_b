			</div>
			<div class="right col-md-4">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/HEELCONDOMS.png') }}">
			</div>
		{% else %}
			<div class="col-xs-6">
				<img class="img-responsive" src="{{ asset('bundles/tresepicbopr/images/lollipopcases2.png') }}">
			</div>
			<div class="col-xs-6">
				<img class="img-responsive pull-right" src="{{ asset('bundles/tresepicbopr/images/origami_lifestyle2.png') }}">
			</div>
		{% endif %}
