{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
<h2>Newsletter</h2>
	{% if(errors.count() != 0) %}
		{% for error in errors %}
			<div class="alert alert-danger">
				<a class="close" data-dismiss="alert" href="#">×</a>
				{{ error.message }}
			</div>
		{% endfor %}
	{% else %}
		<div class="alert alert-success">
			<a class="close" data-dismiss="alert" href="#">×</a>
			Suscripcion correcta
		</div>
	{% endif %}
{% endblock %}
