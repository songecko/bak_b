{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Login <small>BOPR</small></h1>
</div>

{% if error %}
    <div class="alert alert-danger">
        {{ error }}
    </div>
{% endif %}

<br>

<form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal">
<fieldset style="border: none;">
    <div class="form-group">
        <label for="username" class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-3 control-label">Password</label>
        <div class="col-sm-9">
            <input type="password" id="password" name="_password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label for="remember_me">
                    Remember me? &nbsp; <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                </label>
            </div>
        </div>
    </div>
</fieldset>
<br>
<div class="form-actions clearfix">
    <button type="submit" class="btn btn-primary btn-lg" name="login">{{ 'security.login.submit'|trans }}</button>
</div>
</form>
<br>
<br>

{% endblock %}
